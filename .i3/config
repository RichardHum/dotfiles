for_window [title=".* - Google Chrome"] border 1pixel
for_window [class=".*URxvt.*"] border 1pixel
for_window [class="qemu-system-.*"] border 1pixel, floating enable
for_window [instance="gl" class="mpv"] border none, floating enable

# Put matlab windows in wksp 9
